{% extends '@Gui/Layout/layout.twig' %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_title -%}
            <h5>{{ 'Catalog' | trans }}</h5>
        {%- endblock %}

        {% block widget_content %}
            <div class="row">
                <div class="col-lg-12">
                    {% for labelButton in labelButtons %}
                        {{ labelButton | raw }}
                    {% endfor %}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-3">
                    <h3>{{ 'Discover by category' | trans }}</h3>
                    {% include '@ApplicationCatalogGui/Partials/category-menu.twig' with {
                        categoriesMenu: categoriesMenu
                    } only %}
                </div>
                <div class="col-lg-9">
                    {{ appsTable | raw }}
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
