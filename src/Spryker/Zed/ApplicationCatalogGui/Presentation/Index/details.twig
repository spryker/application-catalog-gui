{% extends '@Gui/Layout/layout.twig' %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' %}
        {% block widget_title -%}
            <h5>{{ 'App Details' | trans }}</h5>
        {%- endblock %}

        {% block widget_content %}
            <div class="row">
                <div class="col-lg-3 text-center">
                    <a href="{{ appData.url }}">
                        <img src="{{ appData.iconUrl }}" width="125px" alt="logo"/>
                    </a>
                </div>
                <div class="col-lg-7">
                    <p>
                        <h2>
                            <b>{{ appData.name }}</b>
                            <a href="{{ appData.url }}">
                                <i style="color: green">{{ 'by' | trans }} {{ appData.providerName }}</i>
                            </a>
                        </h2>
                    </p>
                    <p>{{ appData.description }}</p>
                    <p>
                        {%- for category in appData.categories -%}
                            <span class="badge badge-secondary m-r-xs">{{ category.title }}</span>
                        {%- endfor -%}
                    </p>
                </div>
                <div class="col-lg-2 text-right">
                    {%- if appData.connectionState.code == 'connected' %}
                        <a href="#" class="btn btn-create btn-outline btn-xs" disabled="disabled">
                            <i class="fa"></i> {{ 'Disconnect app' | trans }}
                        </a>
                    {%- else -%}
                        <a href="{{ path('application-catalog-gui:index:connect', {'uuid': appData.applicationUuid}) }}" class="btn btn-create btn-md">
                            <i class="fa"></i> {{ 'Connect app' | trans }}
                        </a>
                    {%- endif -%}
                    <br>
                    <div class="text-muted">{{ appData.connectionState.description }}</div>
                    <br>
                    <a href="{{ path('application-catalog-gui:index:configure', {'uuid': appData.applicationUuid}) }}" class="btn btn-create btn-md">
                        <i class="fa"></i> {{ 'Configuration' | trans }}
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-7">
                    <p>
                        {% include '@ApplicationCatalogGui/Partials/star-rating.twig' with {
                            rating: appData.rating
                        } only %}
                        {{ appData.totalReviews }} {{ 'reviews' | trans }}
                    </p>
                </div>
                <div class="col-lg-2 text-right">
                    {%- for label in appData.labels -%}
                        <span class="badge badge-success m-r-xs">{{ label.title }}</span>
                    {%- endfor -%}
                </div>
            </div>
            <div><br><br></div>
            <div class="row">
                <div class="col-lg-10">
                    <div class="badge bg-muted" style="width: 100%; height: 200px">
                        {{ 'items gallery' | trans }}
                    </div>
                    <div class="badge" style="background: white; width: 100%;"> </div>
                </div>
                <div class="col-lg-2">
                    <div class="badge bg-muted" style="width: 100%;">
                        <h5>{{ 'Resources' | trans }}</h5>
                        {%- for resource in appData.resources -%}
                            <div class="text-left">
                                <a href="{{ resource.url }}" target="_blank">{{ resource.title }}</a>
                            </div>
                            <br>
                        {%- endfor -%}
                    </div>
                    <div class="badge" style="background: white; width: 100%;"> </div>
                    <div class="badge bg-muted" style="width: 100%;">
                        <h5>{{ 'Updates' | trans }}</h5>
                        <div class="text-left">{{ 'LAST UPDATED' | trans }}</div>
                        <div class="text-left"><b>{{ appData.updatedAt }}</b></div>
                        <br>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h3>{{ 'Description' | trans }}</h3>
                    {{ appData.overview | raw }}
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
